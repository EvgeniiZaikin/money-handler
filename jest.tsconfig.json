{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react-jsx",
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", ".next"]
}
